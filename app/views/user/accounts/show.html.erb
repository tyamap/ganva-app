<% @title = 'アカウント情報' %>
<h1><%= @title %></h1>

<div class="table-wrapper">
  <div class="links">
    <%= link_to "アカウント情報編集", :edit_user_account %> | 
    <%= link_to "パスワード変更", :edit_user_password %>
  </div>

  <table class="attributes">
    <tr>
      <th>ID</th>
      <td><%= @user.uid %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td class="email"><%= @user.email %></td>
    </tr>
    <tr>
      <th>パスワード</th>
      <td class="password">**********</td>
    </tr>
  </table>
</div>