<%= markup do |m|
  p = UserFormPresenter.new(f, self)
  m << p.notes
  p.with_options(required: true) do |q|
    m << q.date_field_block(:date, '日付')
    m << q.time_select_block(:start_time, '開始予定時間')
    m << q.time_select_block(:end_time, '終了予定時間')
    m << q.drop_down_collection_block(:gym_id, 'ジム', @gyms, :id, :name)
    m << q.textarea_field_block(:description, '紹介', required: false)
  end
end %>
<%= render @is_commit ? 'commit_form' : 'result_form', f: f %>
