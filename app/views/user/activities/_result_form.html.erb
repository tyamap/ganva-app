
<%= f.fields_for :level_count, f.object.level_count do |ff| %>
  <%= markup do |m|
    p = UserFormPresenter.new(ff, self)
    p.with_options(required: true, min: 0) do |q|
      m << q.number_field_block(:level0, 'レベル１')
      m << q.number_field_block(:level1, 'レベル２')
      m << q.number_field_block(:level2, 'レベル３')
      m << q.number_field_block(:level3, 'レベル４')
      m << q.number_field_block(:level4, 'レベル５')
      m << q.number_field_block(:level5, 'レベル６')
      m << q.number_field_block(:level6, 'レベル７')
      m << q.number_field_block(:level7, 'レベル８')
      m << q.number_field_block(:level8, 'レベル９')
      m << q.number_field_block(:level9, 'レベル１０')
    end
  end %>
<% end  %>
<%= markup do |m|
  p = UserFormPresenter.new(f, self)
  m << p.textarea_field_block(:description, '説明文')
end %>