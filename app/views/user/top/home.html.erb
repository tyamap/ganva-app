<% @title = 'HOME'%>
<h1><%= @title %></h1>

  <div class='row'>
    <aside class='col-md-4'>
      <section class='user_info'>
        <%= render 'user/shared/user_info' %>
      </section>
      <section class='stats'>
        <%= render 'user/shared/stats' %>
      </section>
      <div class='level-counter'>
        <button class='minus'>ー</button>
        <input id='level0' type="number" readonly value=0 min=0 >
        <button class='plus'>＋</button>
      </div>
    </aside>
    <div class='col-md-8'>
      <h3>Activity Feed</h3>
      <%= render 'user/shared/feed' %>
    </div>
  </div>